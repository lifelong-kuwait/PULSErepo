<div class="row" style="margin-left:40%;">
    <div class="form-group">
        <h2>Venue Daily Utilization Report</h2>
    </div>
</div>
<div class="form-group" style="margin-left:10%;">
    <div class="form-group">
        <div class="row" style="margin-top:1%;">
            @Html.Label("Venue", new { @class = "col-md-3 col-lg-3 control-label" })
            <div class="col-md-8">
                @(Html.Kendo().DropDownList()
                           .Name("Venue_Type")
                           .DataTextField("Text")
                           .DataValueField("Value")
                           .OptionLabel("--Please select Venue Type--")
                           .BindTo(new List<SelectListItem>(){
                               new SelectListItem() {
                                    Text = "Select Venue Type", Value ="2"
                      },new SelectListItem()
                         {
                                    Text = "Common", Value ="1"
                         }
                         ,new SelectListItem() {
                                    Text = "All Utilized", Value ="0"
                         } })
                                                                                                                                            .HtmlAttributes(new { @class = "form-control ", @style = " width: 100%;" })
                )

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row" style="margin-top:1%;">
            @Html.Label("Select Date", new { @class = "col-md-3 col-lg-3 control-label" })
            <div class="col-md-8">
                @(Html.Kendo().DatePicker()
                                                                                                                                                                 .Name("Start_Date")
                                                                                                                                                                 .Value(DateTime.Now.Date)
                                                                                                                                                                 .Format("{0:MM/dd/yyyy}")
                                                                                                                                                                 .HtmlAttributes(new { style = "width: 100%", title = "datetimepicker" })
                                                                                                                                                                 .DateInput()
                )
            </div>
        </div>
    </div>
    <div class="form-group col-md-2 col-lg-2 col-sm-2" style="margin-left:65%;margin-top:1%;">
        @(Html.Kendo().Button()
                                                                                                                                  .Name("H2")
                                                                                                                                  .HtmlAttributes(new { type = "button", @class = "btn btn-primary k-primary" })
                                                                                                                                  .Content("" + @lr.ActivitySummaryReport + "")
        )
    </div>
</div>
<div class="row">
    <div class="col-lg-10">
        <iframe id="ifrmReportViewer" frameborder="0" EnableEventValidation="false" src="" width="1000" height="1000" style="overflow:hidden;" allowtransparency="true" allowfullscreen></iframe>
    </div>
</div>

<script type="text/javascript">
    jQuery(function () {
        jQuery("#H2").live("click", function (event) {
            var datepicker = jQuery("#Start_Date").data("kendoDatePicker");
            startDateFrom = new Date(datepicker.value());
            startDateFrom = kendo.toString(startDateFrom, "dd/MM/yyyy");
            
            if (jQuery("#Venue_Type").data("kendoDropDownList").value().trim().length <= 0
                || startDateFrom.toString().trim().length <= 0) {
                console.log('null value');
            } else {
                url = "../Views/Report/SpLReports/VenueDailyUtilizationReport.aspx?rptmode=local&reportname=DailyUtilizationReport&Venue=" + jQuery("#Venue_Type").data("kendoDropDownList").value() + "&StartDate=" + startDateFrom + "";
                var myframe = document.getElementById("ifrmReportViewer");
                if (myframe !== null) {
                    if (myframe.src) {
                        myframe.src = url;
                    }
                    else if (myframe.contentWindow !== null && myframe.contentWindow.location !== null) {
                        myframe.contentWindow.location = url;
                    }
                    else { myframe.setAttribute('src', url); }
                }
            }
            jQuery("#H2").attr("disabled", false);
            return false;
        });

        jQuery("#Class").live("change", function (event) {
            var classId = jQuery("#Class").data("kendoDropDownList").value();
            jQuery.ajax({
                method: "post",
                url: "/SPl_Test_Reports/classStatAndEndDate?ClassID=" + classId,
                dataType: "JSON",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({ ClassID: classId }),
                success: function (msg) {
                    jQuery("#startDate").val(msg.Data.StartDate).change();
                    jQuery("#endDate").val(msg.Data.EndDate).change();
                }
            });
        });
