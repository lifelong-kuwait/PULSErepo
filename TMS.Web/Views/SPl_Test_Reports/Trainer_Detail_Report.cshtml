@*<div class="col-md-offset-2">*@
<div class="row" style="margin-left:40%;">
    <div class="form-group">
        <h2>Trainer Detail Report</h2>
    </div>
</div>
<div class="form-group" style="margin-left:10%;">
    <div class="form-group">
        <div class="row" style="margin-top:1%;">
            @Html.Label("Course", new { @class = "col-md-3 col-lg-3 control-label" })
            <div class="col-md-7 col-lg-7 col-sm-11">
                @(Html.Kendo().DropDownList()
                                                                                                                                                           .Name("Course")
                                                                                                                                                           .DataTextField("Text")
                                                                                                                                                           .DataValueField("Value")
                                                                                                                                                           .OptionLabel("--Please select Course--")
                                                                                                                                                           .DataSource(source =>
                                                                                                                                                           {
                                                                                                                                                               source.Read(read =>
                                                                                                                                                               {
                                                                                                                                                                   read.Action("Course", "DDL");
                                                                                                                                                               });
                                                                                                                                                           })
                                                                                                                                                          .HtmlAttributes(new { @class = "form-control ", @style = " width: 100%;" })
                )

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row" style="margin-top:1%;">
            @Html.Label("Class", new { @class = "col-md-3 col-lg-3 control-label" })
            <div class="col-md-7 col-lg-7 col-sm-11">
                @(Html.Kendo().DropDownList()
                                                                                                                                                            .Name("Class")
                                                                                                                                                            .DataTextField("Text")
                                                                                                                                                            .DataValueField("Value")
                                                                                                                                                            .OptionLabel("--Please select Class--")
                                                                                                                                                            //.DataSource(source =>
                                                                                                                                                            //{
                                                                                                                                                            //    source.Read(read =>
                                                                                                                                                            //    {
                                                                                                                                                            //        read.Action("Classes", "DDL");
                                                                                                                                                            //    });
                                                                                                                                                            //})
                                                                                                                                                            .HtmlAttributes(new { @class = "form-control ", @style = " width: 100%;" })
                                                                                                                                                                                                                                                .HtmlAttributes(new { style = "width: 100%" })
                )
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row" style="margin-top:1%;">
            @Html.Label("Trainer", new { @class = "col-md-3 col-lg-3 control-label" })
            <div class="col-md-7 col-lg-7 col-sm-11">
                @(Html.Kendo().DropDownList()
                                                                                                                                                           .Name("Trainer")
                                                                                                                                                           .DataTextField("Text")
                                                                                                                                                           .DataValueField("Value")
                                                                                                                                                           .HtmlAttributes(new { @class = "form-control ", @style = " width: 100%;" })
                                                                                                                                                           .OptionLabel( "--Please select Trainer--")
                )

            </div>
        </div>
    </div>
    <div class="form-group col-md-2 col-lg-2 col-sm-2" style="margin-left:65%;margin-top:1%;">
        @(Html.Kendo().Button()
                                                                                                                                                       .Name("H2")
                                                                                                                                                       .HtmlAttributes(new { type = "button", @class = "btn btn-primary k-primary" })
                                                                                                                                                       .Content("" + @lr.ActivitySummaryReport + "")
        )
    </div>
</div>
<div class="row">
    <div class="col-lg-10">
        <iframe id="ifrmReportViewer" frameborder="0" EnableEventValidation="false" src="" width="1000" height="1000" style="overflow:hidden;" allowtransparency="true" allowfullscreen onload='document.getElementById("H2").disabled = false;'></iframe>
    </div>
</div>

<script type="text/javascript">
    jQuery(function () {
        jQuery("#H2").live("click", function (event) {
            if (jQuery("#Class").data("kendoDropDownList").value().trim().lenght <= 0 || jQuery("#Course").data("kendoDropDownList").value().trim().lenght <= 0 || jQuery("#Trainer").data("kendoDropDownList").value().trim().lenght <= 0) {

            } else {
                url = "../Views/Report/SpLReports/TrainerDetailReport.aspx?rptmode=local&reportname=Tran_TrainerDetailReport&ClassID=" + jQuery("#Class").data("kendoDropDownList").value() + "&CourseID=" + jQuery("#Course").data("kendoDropDownList").value() + "&trainer=" + jQuery("#Trainer").data("kendoDropDownList").value() + "";
            var myframe = document.getElementById("ifrmReportViewer");
            if (myframe !== null) {
                if (myframe.src) {
                    myframe.src = url;
                }
                else if (myframe.contentWindow !== null && myframe.contentWindow.location !== null) {
                    myframe.contentWindow.location = url;
                }
                else { myframe.setAttribute('src', url); }
                }
            }
            
            return false;
        });
        jQuery("#Class").live("change", function (event) {
            var classId = jQuery("#Class").data("kendoDropDownList").value();
           jQuery.ajax({
                method: "post",
                url: "/SPl_Test_Reports/Class_Trainer?classId=" + classId,
                dataType: "JSON",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({ classId: classId }),
                success: function (msg) {
                    jQuery("#Trainer").kendoDropDownList({
                        OptionLabel: "--Please select Trainer--",
                        dataTextField: "Text",
                        dataValueField: "Value",
                        dataSource: msg,
                        height: 100
                    })
                }
            });
        });
        jQuery("#Course").live("change", function (event) {
            var classId = jQuery("#Course").data("kendoDropDownList").value();
            jQuery.ajax({
                method: "post",
                url: "/SPl_Test_Reports/Course_Class?course=" + classId,
                dataType: "JSON",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({ course: classId }),
                success: function (msg) {
                    jQuery("#Class").kendoDropDownList({
                        OptionLabel: "--Please select Class--",
                        dataTextField: "Text",
                        dataValueField: "Value",
                        dataSource: msg,
                        height: 100
                    })
                    var classId = jQuery("#Class").data("kendoDropDownList").value();
                    if (classId != null) {
                    jQuery.ajax({
                        method: "post",
                        url: "/SPl_Test_Reports/Class_Trainer?classId=" + classId,
                        dataType: "JSON",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({ classId: classId }),
                        success: function (msg) {
                            jQuery("#Trainer").kendoDropDownList({
                                OptionLabel: "--Please select Trainer--",
                                dataTextField: "Text",
                                dataValueField: "Value",
                                dataSource: msg,
                                height: 100
                            })
                        }
                        });
                    }
                }
            });
        });
    });
</script>
