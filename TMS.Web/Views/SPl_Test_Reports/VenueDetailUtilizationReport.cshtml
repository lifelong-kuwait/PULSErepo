</style>
@*<div class="col-md-offset-2">*@
<div class="row" style="margin-left:40%;">
    <div class="form-group">
        <h2>Venue Detail Utilization Report</h2>
    </div>
</div>
<div class="form-group" style="margin-left:10%;">
    <div class="form-group">
        <div class="row" style="margin-top:1%;">
            @Html.Label("Venue", new { @class = "col-md-3 col-lg-3 control-label" })
            <div class="col-md-7 col-lg-7 col-sm-11">
                @(Html.Kendo().DropDownList()
                                                                                                                                    .Name("Venue")
                                                                                                                                    .DataTextField("Text")
                                                                                                                                    .DataValueField("Value")
                                                                                                                                    .Filter("contains")
                                                                                                                                    .OptionLabel("--Please select Venue--")
                                                                                                                                    .DataSource(source =>
                                                                                                                                    {
                                                                                                                                        source.Read(read =>
                                                                                                                                        {
                                                                                                                                            read.Action("DDLVenue", "DDL");
                                                                                                                                        }).ServerFiltering(false);
                                                                                                                                    })
                                                                                                                                    .HtmlAttributes(new { @class = "form-control ", @style = " width: 100%;" })
                )

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row" style="margin-top:1%;">
            @Html.Label("Date From", new { @class = "col-md-3 col-lg-3 control-label" })
            <div class="col-md-7 col-lg-7 col-sm-11">
                @(Html.Kendo().DatePicker()
                                                                                                                                                         .Name("Start_Date")
                                                                                                                                                         .Value(DateTime.Now.Date)
                                                                                                                                                         .Format("{0:MM/dd/yyyy}")
                                                                                                                                                         .HtmlAttributes(new { style = "width: 100%", title = "datetimepicker" })
                                                                                                                                                         .DateInput()
                )
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row" style="margin-top:1%;">
            @Html.Label("Date To", new { @class = "col-md-3 col-lg-3 control-label" })
            <div class="col-md-7 col-lg-7 col-sm-11">
                @(Html.Kendo().DatePicker()
                                                                                                                                                         .Name("To_Date")
                                                                                                                                                         .Value(DateTime.Now.Date)
                                                                                                                                                         .Format("{0:MM/dd/yyyy}")
                                                                                                                                                         .HtmlAttributes(new { style = "width: 100%", title = "datetimepicker" })
                                                                                                                                                         .DateInput()
                )
            </div>
        </div>
    </div>


    <div class="form-group col-md-2 col-lg-2 col-sm-2" style="margin-left:65%;margin-top:1%;">
        @(Html.Kendo().Button()
                                                                                                                          .Name("H2")
                                                                                                                          .HtmlAttributes(new { type = "button", @class = "btn btn-primary k-primary" })
                                                                                                                          .Content("" + @lr.ActivitySummaryReport + "")
        )
    </div>
</div>
<div id="loader"></div>
