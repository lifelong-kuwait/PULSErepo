                                                                                                                                        .Value(1)
                                                                                                                                        .HtmlAttributes(new { style = "width: 100%", @class = "currency", title = "Quantity", required = "true" })
                            )
                        </td>
                        <td>
                            @(Html.Kendo().NumericTextBox<decimal>
                                                                                                                                        ()
                                                                                                                                        .Name("currency0")
                                                                                                                                        .Min(1)
                                                                                                                                        .Value(1)
                                                                                                                                        .Format("00.000")
                                                                                                                                        .Decimals(3)
                                                                                                                                        .Events(e => e
