                        </td>
                        <td>
                            @(Html.Kendo().TextBox()
                                                                                                                                    .Name("Description0")
                                                                                                                                    .Value("")
                                                                                                                                    .HtmlAttributes(new { style = "width: 100%", title = "Description", required = "true" })

                            )
                        </td>
                        <td>
                            @(Html.Kendo().NumericTextBox<int>
                                                                                                                                        ()
                                                                                                                                        .Name("Qty0")
