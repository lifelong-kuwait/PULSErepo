@model TMS.Library.Entities.Invoice.DepositDetail
@using lr = Resources.Resources

<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    <div class="form-group">
        @Html.LabelFor(model => model.Payment_Type, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(c => c.Payment_Type).DataTextField("Text").DataValueField("Value")
                    .OptionLabel(lr.PaymentType)
                    //  .OptionLabel(new { Text = lr.SalutationOptionalLabel, Value = 0 })
                    .HtmlAttributes(new { @class = "form-control txtrequired ", style = "width:100%", })
                                        .BindTo(TMS.Extensions.EnumToSelectList<TMS.Library.DepositType>(typeof(TMS.Library.DepositType))))
            @Html.ValidationMessageFor(model => model.Payment_Type)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Payment, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().NumericTextBoxFor<double>(c => c.Payment).Format("00.000").Decimals(3).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Detail, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.Detail).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))

        </div>
    </div>
</div>
