@model TMS.Library.Entities.Invoice.InvoiceHistory
@using lr = Resources.Resources

<div class=" Alertbox alert alert-danger" style="display:none">
    <ul class="errors"></ul>
</div>
<div class="form-horizontal form-person-popup">
    <div class="form-group">
        @Html.LabelFor(model => model.History_Name, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.History_Name).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.History_Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Type, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().DropDownListFor(c => c.Type).DataTextField("Text").DataValueField("Value")
                                            .OptionLabel(lr.StatusName)
                                            //  .OptionLabel(new { Text = lr.SalutationOptionalLabel, Value = 0 })
                                            .HtmlAttributes(new { @class = "form-control txtrequired ", style = "width:100%", })
                                                                .BindTo(TMS.Extensions.EnumToSelectList<TMS.Library.InvoiceStatus>(typeof(TMS.Library.InvoiceStatus))))
            @Html.ValidationMessageFor(model => model.Type)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "col-md-3 col-lg-3 control-label" })
        <div class="col-md-7 col-lg-7 col-sm-11">
            @(Html.Kendo().TextBoxFor(c => c.Description).HtmlAttributes(new { @class = "form-control ", style = "width:100%" }))
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
</div>

